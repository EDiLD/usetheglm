\ProvidesPackage{beamerthemees}

\RequirePackage{tikz}
\usetikzlibrary{arrows,decorations.pathmorphing,backgrounds,calc}
\RequirePackage{amsmath,amssymb,bm,amsthm}
\usefonttheme{professionalfonts}


\definecolor{green}{RGB}{16, 131, 82}
\definecolor{red}{RGB}{191, 71, 23}
\definecolor{blue}{RGB}{42, 100, 145}
\definecolor{alu1}{HTML}{D0D0D0}
\definecolor{alu2}{HTML}{EEEEEC}

\setbeamertemplate{itemize items}[circle]
\setbeamertemplate{navigation symbols}{}  % no navigation on a poster
\setbeamertemplate{caption}[numbered]
\setbeamercolor{caption name}{fg=blue}

% body colors and fonts
\setbeamercolor*{normal text}{fg=black,bg=alu2}

% headline colors and fonts
\setbeamercolor{headline}{fg=white,bg=blue}
\setbeamercolor{title in headline}{fg=white}

%footline coler
\setbeamercolor{footlinecolor}{fg=white,bg=blue}

% TODO: modify the bullet color for the example and alert blocks!

% block environment
\setbeamercolor*{block body}{bg=alu1,fg=black}
\setbeamercolor*{block title}{fg=white,bg=blue}
\setbeamerfont{block title}{size=\large,series=\bf}

% example environment
\setbeamercolor{block title example}{fg=white,bg=green}
\setbeamercolor{block body example}{bg=alu1,fg=black}

% alerted environment
\setbeamercolor{block title alerted}{fg=white,bg=red}
\setbeamercolor{block body alerted}{bg=alu1,fg=black}

% headline
\setbeamertemplate{headline}{  
  \leavevmode
  \begin{beamercolorbox}[wd=\paperwidth]{headline}
    \begin{columns}[T]
      \begin{column}{.09\paperwidth}
      \end{column}
      \begin{column}{.65\paperwidth}
        \vskip8ex
        \usebeamercolor{title in headline}{\color{fg}\textbf{\huge{\inserttitle}}\\[8ex]}
        \usebeamercolor{author in headline}{\color{fg}\large{\insertauthor}\\[1ex]}
        \usebeamercolor{institute in headline}{\color{fg}\large{\insertinstitute}\\[1ex]}     
      \end{column}
      \begin{column}{.23\paperwidth}
        \vskip1.5cm
        \begin{center}
          \includegraphics[width=.7\linewidth]{fig/Institut.png}
        \end{center}
        \vskip1.5cm
      \end{column}
      \begin{column}{.03\paperwidth}
      \end{column}
    \end{columns}
  \end{beamercolorbox}
  
  \begin{beamercolorbox}[wd=\paperwidth]{lower separation line head}
    \rule{0pt}{2pt}
  \end{beamercolorbox}
}

\setbeamertemplate{footline}{%
  \begin{beamercolorbox}[ht=10ex,leftskip=1cm,rightskip=1cm]{footlinecolor}%
    \hfill \raisebox{-0.4cm}{\textbf{\Large \insertfooter}}
    \vskip1ex
  \end{beamercolorbox}
}
\mode<all>
\def\footer#1{\def\insertfooter{#1}}


\setbeamertemplate{block begin}{
  \vskip.75ex
  \begin{beamercolorbox}[rounded=true,leftskip=1cm,colsep*=.75ex]{block title}%
    \usebeamerfont*{block title}\insertblocktitle
  \end{beamercolorbox}%
  {\ifbeamercolorempty[bg]{block body}{}{\nointerlineskip\vskip-0.5pt}}%
  \usebeamerfont{block body}%
  \begin{beamercolorbox}[rounded=true,colsep*=.75ex,sep=.75ex,vmode]{block body}%
    \ifbeamercolorempty[bg]{block body}{\vskip-.25ex}{\vskip-.75ex}\vbox{}%
  }
  \setbeamertemplate{block end}{
  \end{beamercolorbox}
}

\setbeamertemplate{block alerted begin}{
  \vskip.75ex
  \begin{beamercolorbox}[rounded=true,leftskip=1cm,colsep*=.75ex]{block title alerted}%
    \usebeamerfont*{block title alerted}\insertblocktitle
  \end{beamercolorbox}%
  {\ifbeamercolorempty[bg]{block alerted body}{}{\nointerlineskip\vskip-0.5pt}}%
  \usebeamerfont{block body alerted}%
  \begin{beamercolorbox}[rounded=true,colsep*=.75ex,sep=.75ex,vmode]{block body alerted}%
    \ifbeamercolorempty[bg]{block body alerted}{\vskip-.25ex}{\vskip-.75ex}\vbox{}%
  }

\setbeamertemplate{block alerted end}{
  \end{beamercolorbox}
}

\setbeamertemplate{block example begin}{
  \vskip.75ex
  \begin{beamercolorbox}[rounded=true,leftskip=1cm,colsep*=.75ex]{block title example}%
    \usebeamerfont*{block title example}\insertblocktitle
  \end{beamercolorbox}%
  {\ifbeamercolorempty[bg]{block example body}{}{\nointerlineskip\vskip-0.5pt}}%
  \usebeamerfont{block body example}%
  \begin{beamercolorbox}[rounded=true,colsep*=.75ex,sep=.75ex,vmode]{block body example}%
    \ifbeamercolorempty[bg]{block body example}{\vskip-.25ex}{\vskip-.75ex}\vbox{}%
  }

\setbeamertemplate{block example end}{
  \end{beamercolorbox}
}
